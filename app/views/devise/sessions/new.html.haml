%h2.center_title Log in
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form_div
    = f.input :email, required: false,label: false, autofocus: true, :input_html => {:class => "form-control", :placeholder => "*Email"}
    = f.input :password, label: false, required: false, :input_html => {:class => "form-control" , :placeholder => "*Password"}
    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    %div{:class => "btn.btn-default"}
      = f.button :submit, "Log in"
= render "devise/shared/links"